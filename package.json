{
  "name": "@mrofisr/imgsmith",
  "version": "1.0.1",
  "description": "Forge images using native CLIs (ImageMagick, WebP, AVIF)",
  "author": "abdurrofi <rofim58@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrofisr/imgsmith.git"
  },
  "homepage": "https://github.com/mrofisr/imgsmith#readme",
  "bugs": {
    "url": "https://github.com/mrofisr/imgsmith/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "imgsmith": "dist/cli/index.js"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "import": "./dist/cli/index.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "cli": "node dist/cli/index.js",
    "cli:dev": "tsx src/cli/index.ts"
  },
  "keywords": [
    "image",
    "imagemagick",
    "webp",
    "avif",
    "image-optimization",
    "image-compression",
    "optimization",
    "core-web-vitals",
    "lcp",
    "performance",
    "cli",
    "typescript"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/bun": "^1.3.5",
    "@vitest/coverage-v8": "^1.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  }
}
