{
  "name": "imgsmith",
  "version": "1.0.0",
  "description": "Forge images using native CLIs (ImageMagick, WebP, AVIF)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "imgsmith": "dist/cli/index.js"
  },
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "import": "./dist/cli/index.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "cli": "node dist/cli/index.js",
    "cli:dev": "tsx src/cli/index.ts"
  },
  "keywords": [
    "image",
    "imagemagick",
    "webp",
    "avif",
    "image-optimization",
    "linux",
    "cli",
    "imgsmith"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/bun": "^1.3.5",
    "@vitest/coverage-v8": "^1.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  }
}
